<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiceActivity">

    <LinearLayout
        android:id="@+id/ll_dices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_dicerow_1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
                android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_dices">

            <Button
                android:id="@+id/but_d3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w3"
                android:scaleType="fitCenter"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ButtonStyle,NestedWeights" />

            <Button
                android:id="@+id/but_d4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w4"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintEnd_toStartOf="@+id/but_d6"
                app:layout_constraintStart_toEndOf="@+id/but_d3"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/but_d6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w6"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dicerow_2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
                android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_dicerow_1">

            <Button
                android:id="@+id/but_d8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w8"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/but_d3"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/but_d10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w10"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintEnd_toStartOf="@+id/but_d1010"
                app:layout_constraintStart_toEndOf="@+id/but_d8"
                app:layout_constraintTop_toBottomOf="@+id/but_d4"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/but_d1010"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w1010"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/but_d6"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dicerow_3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
                android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_dicerow_2">

            <Button
                android:id="@+id/but_d12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w12"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/but_d8"
                tools:ignore="ButtonStyle,NestedWeights" />

            <Button
                android:id="@+id/but_d20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w20"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintEnd_toStartOf="@+id/but_d100"
                app:layout_constraintStart_toEndOf="@+id/but_d12"
                app:layout_constraintTop_toBottomOf="@+id/but_d10"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/but_d100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/w100"
                android:textColor="#0800a9"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/but_d1010"
                tools:ignore="ButtonStyle" />


        </LinearLayout>


        <TextView
            android:id="@+id/txt_results"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:scrollbars="vertical"
            android:textSize="45sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>